
#include "Types.h"
class CSensor_AR0135
{

private:
 	cyusb_handle *m_pUsbHandle;
public:
	void SetUsbHandle(cyusb_handle *m_pUsbHandle);
	CSensor_AR0135();
	InitSensor();
	WrSensorReg(const cq_uint16_t iAddr, const cq_uint16_t iValue);
	RdSensorReg(const cq_uint16_t iAddr, cq_uint8_t &	iValue);
	WrFpgaReg(const cq_uint8_t iAddr, const cq_uint8_t iValue);
	RdFpgaReg(const cq_uint8_t iAddr, cq_uint8_t &iValue);
	SetAnalogGain(const cq_uint8_t chTrigType, const cq_uint8_t chGainType);
	SetFpgaTrigFreq(const cq_uint8_t iFreqVal);
	SetTrigMode(const cq_uint8_t chTrigType);
	SetExpoValue(const cq_uint16_t iExpoVal);
	SetGainValue(const cq_uint16_t iGainVal);
	SetAutoGainExpo(const cq_bool_t bIsAutoGain, const cq_bool_t bIsAutoExpo);
	SetResolution(const cq_uint8_t chResoluType);
	SetMirrorType(const cq_uint8_t chMirrorType);
	SetBitDepth(const cq_uint8_t chBitDepthType);
	SendUsbSpeed2Fpga(const cq_uint8_t chSpeedType);

}
